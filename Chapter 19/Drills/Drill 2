// -----------------------------------------------------------------------------
// https://lptcp.blogspot.com/
// Chapter 18 - Drill 2
/*
	Add a constructor, so that you can initialise with a T.
*/
// https://github.com/l-paz91/principles-practice/
// -----------------------------------------------------------------------------

//--INCLUDES--//
#include "std_lib_facilities.h"

// -----------------------------------------------------------------------------

template<typename T>
struct S
{
	S(T t)
	: val(t)
	{}

	T val;
};

// -----------------------------------------------------------------------------

int main()
{
	S<double> sd(10.4f);
	cout << sd.val << endl;

	S<string> ss("A String.");
	cout << ss.val << endl;

	keep_window_open();
	return 0;
}

