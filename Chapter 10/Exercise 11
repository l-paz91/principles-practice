// -----------------------------------------------------------------------------
//
// C10 - Exercise 11
/*
	Write a program that produces the sum of all the whitespace separated integers
	in a text file. For example, bears: 17 elephants 9 end should output 26.
*/
// -----------------------------------------------------------------------------

//--INCLUDES--//
#include "std_lib_facilities.h"

// -----------------------------------------------------------------------------

int main()
{
    vector<int> v;
    int sum=0;
    ifstream ist1{"vecin.txt"};
    
    char ch;
    while(ist1>>ch)
    {
        if(isdigit(ch))
        {
            ist1.putback(ch);
            int val;
            ist1>>val;
            v.push_back(val);
        }
        else
        {
            while(ist1.get(ch))
            {
                if(ch==' ') break;
            }
        }
        
    }
    for(int i=0;i<v.size();i++) sum+=v[i];

	cout << "Sum of whitespace separated integers: " << sum;

	cout << endl;
	keep_window_open();
	return 0;
}

// -----------------------------------------------------------------------------
